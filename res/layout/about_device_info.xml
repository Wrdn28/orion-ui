<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/entity_header"
    android:background="#00000000"
    android:padding="18.0sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-18.0dip"
    android:layout_marginBottom="16.0dip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:paddingTop="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="160.0dip">
        <com.google.android.material.card.MaterialCardView
            android:paddingTop="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="160.0dip"
            settings:cardBackgroundColor="#00000000"
            settings:cardCornerRadius="20.0dip"
            settings:cardElevation="0.0dip">
            <com.orion.settings.widget.WallpaperBlurView
                android:layout_width="fill_parent"
                android:layout_height="160.0dip"
                android:scaleType="centerCrop"
                android:backgroundDimEnabled="true"
                android:elevation="0.0dip" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ui_scrim"
                android:alpha="0.3" />
            <LinearLayout
                android:gravity="left"
                android:layout_marginTop="16.0dip"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20.0dip">
                <TextView
                    android:textSize="13.0sp"
                    android:layout_width="wrap_content"
                    android:id="@+id/release_type"
                    android:layout_height="wrap_content"
                    android:text="OrionOS Version"
                    android:textColor="@android:color/system_accent3_50"
                    style="@style/orion_title_primary" />
                <TextView
                    android:textSize="22.0sp"
                    android:id="@+id/release_type_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empires"
                    android:textColor="@android:color/system_accent3_50"
                    style="@style/orion_title_primary" />
            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_marginTop="58.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/build_status_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/checkmark"
                        android:tint="@android:color/system_accent3_50" />
                    <TextView
                        android:textSize="12.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/build_status"
                        android:text="Officially Supported"
                        android:textColor="@android:color/system_accent3_50"
                        android:layout_marginStart="5.5599976dip"
                        style="@style/orion_title_primary" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/phoneCardView"
                android:layout_width="100.0dip"
                android:gravity="end|center"
                android:layout_gravity="end|center"
                android:layout_height="160.0dip"
                android:layout_marginTop="16.0dip"
                android:layout_marginEnd="16.0dip"
                app:cardBackgroundColor="@color/user_crd_bg"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="3.0dip"
                app:strokeColor="?android:textColorPrimary"
                app:strokeWidth="2.0dip">
                <com.android.settings.preferences.ui.WallpaperView
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    android:elevation="0.0dip" />
                <ImageView
                    android:layout_gravity="center"
                    android:textSize="50.0dip"
                    android:layout_width="50.0dip"
                    android:layout_height="fill_parent"
                    android:tint="?android:colorAccent"
                    android:src="@drawable/ic_orion_logo" />
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>